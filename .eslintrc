{
  "root": true,
  "extends": [
    "airbnb",
    "prettier"
  ],
  "env": {
    "es6": true
  },
  "plugins": ["prettier"],
  "rules": {
    "import/order": ["error", {
      "groups": [
        "builtin",
        "external",
        ["sibling", "parent"]
      ],
      "newlines-between": "always"
    }],
    "prettier/prettier": [
      "error", {
        "semi": true,
        "singleQuote": true
      }
    ]
  }
}